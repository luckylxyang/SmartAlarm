<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/item_alarm"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/alarm_time"
            android:text="00:00"
            android:textSize="@dimen/x30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:textAppearance="?attr/textAppearanceListItem" />

        <TextView
            android:id="@+id/alarm_content"
            android:text="00:00"
            android:layout_toRightOf="@id/alarm_time"
            android:layout_alignBaseline="@id/alarm_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:textAppearance="?attr/textAppearanceListItem" />

        <TextView
            android:id="@+id/alarm_type"
            android:text="00:00"
            android:layout_below="@id/alarm_time"
            android:layout_alignLeft="@id/alarm_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/alarm_later"
            android:layout_toRightOf="@id/alarm_type"
            android:layout_below="@id/alarm_time"
            android:text="00:00"
            android:layout_marginStart="@dimen/x15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <Switch
        android:id="@+id/alarm_switch"
        android:shadowColor="@color/colorPrimary"
        android:layout_gravity="center_vertical|right"
        android:layout_marginEnd="@dimen/x40"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>
