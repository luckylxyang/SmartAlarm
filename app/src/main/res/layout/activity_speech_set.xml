<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.lxy.smartalarm.speech.SpeechSetActivity">

    <RelativeLayout
        android:layout_marginTop="@dimen/x10"
        android:id="@+id/add_alarm_vibrate"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginTop="@dimen/x10"
            android:layout_marginStart="@dimen/x20"
            android:textSize="@dimen/text_size"
            android:textColor="@color/black"
            android:layout_centerVertical="true"
            android:text="@string/speech_set_language"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/speech_set_tv_language"
            android:layout_margin="@dimen/x10"
            android:textSize="@dimen/text_size"
            android:textColor="@color/gray"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/add_iv_vibrate"
            android:layout_marginRight="@dimen/x20"
            android:text="@string/test"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/add_iv_vibrate"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x8"
            android:layout_alignParentRight="true"
            android:background="@drawable/right"
            android:layout_width="@dimen/x20"
            android:layout_height="@dimen/x20" />
    </RelativeLayout>
</LinearLayout>
